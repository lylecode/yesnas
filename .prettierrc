{
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-prisma"],
  "bracketSameLine": true,
  "printWidth": 120,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.prisma"],
      "options": {
        "tabWidth": 2,
        "printWidth": 100,
        "trailingComma": "none",
        "prismaDoc": true,
        "sortSchema": false
      }
    }
  ]
}
